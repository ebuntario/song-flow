# Auth.js
AUTH_SECRET=generate-with-npx-auth-secret

# TikTok OAuth (from developers.tiktok.com)
AUTH_TIKTOK_ID=your_tiktok_client_key
AUTH_TIKTOK_SECRET=your_tiktok_client_secret

# Spotify OAuth (from developer.spotify.com)
AUTH_SPOTIFY_ID=your_spotify_client_id
AUTH_SPOTIFY_SECRET=your_spotify_client_secret

# Test Mode# Enable test-only authentication endpoints (for E2E tests)
TEST_MODE=true

# Backend URL (for frontend WebSocket connection)
NEXT_PUBLIC_BACKEND_URL=http://localhost:4000

# Backend internal URL (for Next.js rewrite proxy in production)
# In Railway: http://<backend-service>.railway.internal:4000
BACKEND_INTERNAL_URL=

# Auth.js trust host (required in production behind a proxy/load balancer)
AUTH_TRUST_HOST=true

# Neon PostgreSQL (for production - leave empty for local SQLite dev)
DATABASE_URL=
